<div class="col-md-12">
  {{partial 'dogs/filter'}}
</div>
<div class="col-md-12">
   <ul>
    {{#each results}}
      {{#link-to "dogs.show" this}}
         <li>
            <span class="photo"><img {{bind-attr src=photo}} class="img-thumbnail" style="width: 50px; height: 50px"></span>
            <span class="name">Name: {{name}} </span>
            <span class="age">Age: {{age}} </span>
            <span class="sex">Sex: {{sex}} </span>
            <span class="weight">Weight: {{weight}} </span>
            <span class="color">color: {{color}} </span>
         </li>
      {{/link-to}}
    {{else}}
      <h4>No results found</h4>
    {{/each}}
   </ul>
   <form {{action createDog on="submit"}}>
     {{input value=dogName placeholder="Name"}}
     <br>
     {{input value=dogAge placeholder="Age"}}
     <br>
     {{input value=dogPhoto placeholder="Photo Url"}}
     <br>
     {{input type="submit"}}
   </form>
</div>
