{{input value=searchTerm placeholder="Dog's Name"}}

<!--Gender filter-->
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    {{genderTitle}}
    <span class="caret"></span>
  </button>
  <div class="dropdown-menu">
    <div class="btn-group btn-group-justified">
      <div class="btn-group">
        <button type="button" {{bind-attr class=":btn :btn-default male:active"}}class="btn btn-default"{{action checkMale}}>Male</button>
      </div>
      <div class="btn-group">
        <button type="button" {{bind-attr class=":btn :btn-default female:active"}}class="btn btn-default"{{action checkFemale}}>Female</button>
      </div>
    </div>
  </div>
</div>

<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    {{ageTitle}}
    <span class="caret"></span>
  </button>
  <div class="dropdown-menu dog-age">
    <div class="btn-group btn-group-justified">
      <div class="btn-group">
        <button type="button" {{bind-attr class=":btn :btn-default puppy:active"}}class="btn btn-default"{{action checkPuppy}}>Puppy</button>
      </div>
      <div class="btn-group">
        <button type="button" {{bind-attr class=":btn :btn-default adolescent:active"}}class="btn btn-default"{{action checkAdolescent}}>Adolescent</button>
      </div>
      <div class="btn-group">
        <button type="button" {{bind-attr class=":btn :btn-default adult:active"}}class="btn btn-default"{{action checkAdult}}>Adult</button>
      </div>
      <div class="btn-group">
        <button type="button" {{bind-attr class=":btn :btn-default senior:active"}}class="btn btn-default"{{action checkSenior}}>Senior</button>
      </div>
    </div>
  </div>
</div>

{{input value=color placeholder="Dog's Color"}}
